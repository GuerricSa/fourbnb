<%= simple_form_for [@oven, @booking] do |f| %>
    <%= f.input :date,
                as: :string,
                input_html: { data: {
                  controller: "datepicker",
                  enableTime: true,
                  dateFormat: "Y-m-d H:i"
                } }
    %>
    <%= f.button :submit %>
  <% end %>

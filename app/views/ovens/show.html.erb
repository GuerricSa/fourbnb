<div class = "container"> 

  <div class = "show-info"> 
    <h2><%= @oven.title %></h1>

    <div class ="d-flex"> 
      Rating : <%= @oven.price%>
      Adresse : <%= @oven.address %>
    </div>
  </div>
  
  <div class ="show-photo"> 

    <div class="show-first-photo">
      <% @oven.photos.first %>
      <%= cl_image_tag @oven.photos.first.key, crop: :fill %>
    </div>

    <div class="grid-photos">

      <div class="grid-photos-1">
        <% @oven.photos[1..2].each do |photo| %>
        <%= cl_image_tag photo.key, crop: :fill %>
        <% end %>
      </div>

      <div class="grid-photos-2">
        <% @oven.photos[3..-1].each do |photo| %>
        <%= cl_image_tag photo.key, crop: :fill %>
        <% end %>
      </div>

    </div>
  </div> 

  <div class="d-flex justify-content-between"> 

    <div class = "mt-3 "> 
      <p>Marque : <%= @oven.brand %></p>
      <p>Description : <%= @oven.description %></p>
      <p>Proposé par : <%= @oven.user.first_name %></p>
    </div>

    <div class ="mt-3 "> 
      <div class="card w-100">
        <div class="card-body">
          <h5 class="card-title"> <strong><%= @oven.price %></strong> €/h </h5>
          <div>
            <p> rating/commentaires</p>
          </div>
          <p class="card-text">Ici on met un form date/heure</p>
          <a href="#" class="btn btn-primary">Réserver</a>
        </div>
      </div>
    </div>

  </div>

  <div class = "mt-3 d-flex justify-content-end"> 
    <% if current_user == @oven.user %>
      <button type="button" class="btn btn-outline-secondary"><%= link_to "Modifier", edit_oven_path(@oven) %></button>

      <button type="button" class="btn btn-outline-secondary"><%= link_to "Supprimer", oven_path(@oven), data: {turbo_method: :delete, turbo_confirm: "Es-tu sûr.e ?"} %></button>
      <% end %>
      <button type="button" class="btn btn-outline-secondary"><%= link_to "Retour à la page d'accueil", root_path %></button>
  </div>
</div>



<div class ="container">
    <h2>Je laisse mon avis</h2>
    <div class="form-size">
        <%= simple_form_for [@booking, @review] do |f| %>
            <div class="field">
                <div class="d-flex">
                    <div>
                        <p>‚≠ê</p>
                    </div>
                    <div class="w-50">
                        <%= f.input :rating, label: false, collection: [1, 2, 3, 4, 5] %>
                    </div>
                </div>

                <div class = "mt-3">
                    <%= f.input :content, minlength: 6, maxlength: 200, label: false, input_html: {rows: "5"}%>
                    <%= f.submit "Envoyer", class: "btn btn-primary" %>
                </div>
            </div>
        <% end %>
    </div>
</div>
